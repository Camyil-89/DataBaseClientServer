<Window x:Class="Client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Client"
		xmlns:vm="clr-namespace:DataBaseClientServer.ViewModels"
        mc:Ignorable="d"
        Title="Client"
        Height="300"
        Width="500"
        WindowStartupLocation="CenterScreen">
	<Window.DataContext>
		<vm:ClientViewModel/>
	</Window.DataContext>
	<DockPanel>
		<StatusBar DockPanel.Dock="Bottom">
			<StatusBarItem Visibility="{Binding Client.VisibilityConnecting}">
				<StackPanel Orientation="Horizontal">
					<TextBlock Text="Подключение" Margin="0 0 5 0"/>
					<ProgressBar Width="100" IsIndeterminate="True" Height="15"/>
				</StackPanel>
			</StatusBarItem>
			<StatusBarItem>
				<StackPanel Orientation="Horizontal">
					<TextBlock Text="Состояние: "/>
					<TextBlock Text="{Binding Client.StatusClient}"/>
				</StackPanel>
			</StatusBarItem>
		</StatusBar>
		<TabControl>
			<TabItem Header="База данных">

			</TabItem>
			<TabItem Header="Настройки">
				<StackPanel Orientation="Horizontal">
					<Button Width="100" Height="40" Margin="5" Content="Connect" Command="{Binding ConnectServerCommand}"/>
					<Button Width="100" Height="40" Margin="5" Content="ping" Command="{Binding PingServerCommand}"/>
					<Button Width="100" Height="40" Margin="5" Content="Auth" Command="{Binding AuthorizationServerCommand}"/>
				</StackPanel>
			</TabItem>
		</TabControl>
	</DockPanel>
	
	<!--<Grid>
		<Grid.RowDefinitions>
			<RowDefinition/>
			<RowDefinition/>
		</Grid.RowDefinitions>
		
    </Grid>-->
</Window>
