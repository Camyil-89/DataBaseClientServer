<Window x:Class="Client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Client"
		xmlns:vm="clr-namespace:DataBaseClientServer.ViewModels"
        mc:Ignorable="d"
        Title="Client"
        Height="300"
        Width="500"
        WindowStartupLocation="CenterScreen">
	<Window.DataContext>
		<vm:ClientViewModel/>
	</Window.DataContext>
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition/>
			<RowDefinition/>
		</Grid.RowDefinitions>
		<StackPanel Orientation="Horizontal">
			<Button Width="100" Height="40" Margin="5" Content="Connect" Command="{Binding ConnectServerCommand}"/>
			<Button Width="100" Height="40" Margin="5" Content="ping" Command="{Binding PingServerCommand}"/>
		</StackPanel>
    </Grid>
</Window>
